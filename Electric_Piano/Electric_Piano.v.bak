module Electric_Piano(
    input clk,          // 12MHz时钟（PIN_JS）
    input rst_n,        // 复位信号
    input [3:0] row,    // 矩阵键盘行输入（ROW1-4）
    output [3:0] col,   // 矩阵键盘列输出（COL1-4）
    output beeper       // 蜂鸣器输出（PIN_B14）
);

// 矩阵键盘输出信号（16位，每个位对应一个按键）
wire [15:0] key_out;

// 实例化矩阵键盘驱动模块
Array_KeyBoard u_Array_KeyBoard (
    .clk(clk),
    .rst_n(rst_n),
    .row(row),
    .col(col),
    .key_out(key_out)
);

// 实例化蜂鸣器驱动模块
Beeper u_Beeper (
    .clk_in(clk),
    .rst_n_in(rst_n),
    .key_in(~key_out),  // key_out低有效，取反后输入
    .beeper(beeper)
);

endmodule